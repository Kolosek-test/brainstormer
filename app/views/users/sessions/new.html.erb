<div class="mx-auto px-4 xl:px-0 lg:max-w-screen-lg xl:max-w-screen-xl">
<%= render 'shared/menu' %>
  <div class="mb-12 my-shadow-lg grid grid-cols-2">
    <div class="bg-white px-12 pt-12 pb-16 mb-4 h-full">
      <div class="flex flex-row justify-between">
        <%= link_to root_path do %>
          <div class="-ml-16 italic bg-black w-32 h-32 lg:w-16 lg:h-16 text-white text-7xl lg:text-5xl flex font-bold items-center justify-center">
            <span>B</span>
          </div>
        <% end %>  
      </div>
      <div class="px-12 h-full flex flex-col">
        <h1 class="text-3xl lg:text-3xl font-semibold w-72 text-blurple mb-2">Let's get you signed in!</h1>
        <div class="my-12">
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to omniauth_authorize_path(resource_name, provider), method: :post, class: "w-full" do %>
              <button class="w-full justify-center uppercase hvr-grow my-shadow py-2 px-4 lg:py-3 bg-blurple text-white font-bold border-solid border-2 border-blurple focus:outline-none">Sign in with Google</button>
            <% end %>
          <% end %>
          <div class="flex flex-row items-center mt-12 mb-8">
            <div class="border-dotted border-t-2 w-full border-blurple"></div>
            <p class="px-4 font-bold text-blurple">OR</p>
            <div class="border-dotted border-t-2 w-full border-blurple"></div>
          </div>
          <%= render "form" %>
        </div>
      </div>
    </div>
    <div class="flex flex-col justify-center items-center h-full px-12">
      <p class="text-xl mb-4"><%= @quote[0][0] %><p>
      <p class="text-sm italic self-start"><%= @quote[1][0] %></p>
    </div>
  </div>
  <%= render 'shared/footer' %>
</div>


