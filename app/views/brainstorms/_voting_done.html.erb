<div class="flex-col flex w-full md:p-4 lg:p-0 mx-auto lg:max-w-screen-lg">
  <h1 class="p-4 text-4xl lg:text-2xl text-white font-semibold uppercase bg-blurple leading-tight my-shadow-lg inline-flex">* VOTING DONE *</h1>
  <h1 class="problem mt-4 p-8 text-6xl lg:text-4xl text-white font-semibold uppercase bg-black leading-tight my-shadow-lg w-full"><%=@brainstorm.problem %></h1>
  <div class="lg:mb-4 mb-16 lg:mt-4 mt-8 flex lg:flex-row flex-col justify-between">

  <% if Current.facilitator %>
    <% if @access_to_pdf_export %>
      <%= link_to your_brainstorms_path do %>
        <button class="hvr-grow bg-pinky active:bg-darker-pinky text-blurple lg:block lg:p-2 md:p-4 font-semibold uppercase leading-tight my-shadow-lg lg:w-64 w-full">
          <div class="border-blurple border-solid border-2 flex items-center lg:justify-between md:justify-center px-4 lg:py-0 md:py-4">
            <div class="flex font-semibold h-full text-base focus:outline-none py-2 md:text-4xl lg:text-lg">YOUR BRAINSTORMS</div>
            <div class="flex">
            <i class="material-icons lg:h-6 lg:w-6 md:h-12 md:w-12 md:ml-4 lg:ml-0">save</i>
            </div>
          </div>
        </button>
      <% end %>
    <% else %>
      <%= link_to pricing_path do %>
        <button class="lg:block hvr-grow lg:p-2 md:p-4 font-semibold uppercase text-blurple bg-pinky active:bg-darker-pinky leading-tight my-shadow-lg lg:w-64 w-full">
          <div class="border-solid border-blurple border-2 flex items-center lg:justify-between md:justify-center px-4 lg:py-0 md:py-4">
              <div class="flex font-semibold h-full text-base focus:outline-none py-2 md:text-4xl lg:text-lg">UPGRADE</div>
            <div class="flex">
              <i class="material-icons lg:h-6 lg:w-6 md:h-12 md:w-12 md:ml-4 lg:ml-0">emoji_events</i>
            </div>
          </div>
        </button>
      <% end %>
    <% end %>
  <% else %>
    <% if @session.user? %>
      <%= link_to root_url do %>
        <button class="lg:block hvr-grow lg:p-2 md:p-4 font-semibold uppercase text-blurple bg-pinky active:bg-darker-pinky leading-tight my-shadow-lg lg:w-64 w-full">
          <div class="border-solid border-blurple border-2 flex items-center lg:justify-between md:justify-center px-4 lg:py-0 md:py-4">
              <div class="flex font-semibold h-full text-base focus:outline-none py-2 md:text-4xl lg:text-lg">NEW BRAINSTORM</div>
            <div class="flex">
              <i class="material-icons lg:h-6 lg:w-6 md:h-12 md:w-12 md:ml-4 lg:ml-0">flash_on</i>
            </div>
          </div>
        </button>
      <% end %>
    <% else %>
      <%= link_to new_user_registration_path do %>
        <button class="lg:block hvr-grow lg:p-2 md:p-4 font-semibold uppercase bg-pinky active:bg-darker-pinky leading-tight my-shadow-lg lg:w-64 w-full">
          <div class="border-solid border-blurple border-2 flex items-center lg:justify-between md:justify-center px-4 lg:py-0 md:py-4">
              <div class="flex text-blurple font-semibold h-full text-base focus:outline-none py-2 md:text-4xl lg:text-lg">CREATE ACCOUNT</div>
            <div class="flex">
              <svg xmlns="http://www.w3.org/2000/svg" class="lg:h-6 lg:w-6 md:h-12 md:w-12 md:ml-4 lg:ml-0" height="24px" viewBox="0 0 24 24" width="24px" fill="#312783"><path d="M0 0h24v24H0z" fill="none"/><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg>
            </div>
          </div>
        </button>
      <% end %>
    <% end %>



  <% end %>
    <div class="flex lg:space-x-2">
      <%= link_to download_brainstorm_path(token: @brainstorm.token, visitor_id: @visitor_id), method: :post, id: "save-to-pdf-button", class: "#{"tooltip" if !@access_to_pdf_export}" do %>
        <button onmouseout="outFunc()" class="<%= @access_to_pdf_export ? "bg-blurple active:bg-darker-blurple hvr-grow text-white" : "cursor-default bg-gray-200 text-gray-400" %> hidden lg:block lg:p-2 md:p-4 font-semibold uppercase leading-tight my-shadow-lg lg:w-56">
        <% if !@access_to_pdf_export %>
          <span class="tooltiptext flex flex-col align-middle mb-2"><i class="material-icons">lock</i><%= Current.facilitator ? "You need" : "Your facilitator needs" %> to upgrade to save to pdf.</span>
        <% end %>
          <div class="<%= @access_to_pdf_export ? "border-white" : "border-gray-400" %> border-solid font-semibold h-full text-base focus:outline-none md:text-4xl lg:text-lg border-2 flex items-center lg:justify-between md:justify-center px-4 lg:py-0 md:py-4">
              <div class="flex py-2">SAVE TO PDF</div>
            <div class="flex">
              <span id="save-to-pdf-button-icon"  class="material-icons lg:h-6 lg:w-6 md:h-12 md:w-12 md:ml-4 lg:ml-0">picture_as_pdf</span>
              <div id="save-to-pdf-button-spinner" style="border-top-color:transparent" class="hidden h-5 w-5 rounded-full border-2 border-white animate-spin"></div>
            </div>
          </div>
        </button>
      <% end %>
      <button onclick="openSendEmailModal()" class="hvr-grow lg:p-2 md:p-4 text-lg lg:text-2xl text-white font-semibold uppercase bg-blurple active:bg-darker-blurple focus:outline-none leading-tight my-shadow-lg lg:w-56 w-full lg:mt-0 md:mt-8">
        <div class="border-solid border-white border-2 flex items-center lg:justify-between md:justify-center px-4 lg:py-0 md:py-4">
          <div class="flex text-white font-semibold h-full text-base focus:outline-none py-2 md:text-4xl lg:text-lg">EMAIL</div>
          <div class="flex">
            <svg class="lg:h-6 lg:w-6 md:h-12 md:w-12 md:ml-4 lg:ml-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white">
              <path d="M0 0h24v24H0z" fill="none" />
              <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" />
            </svg>
          </div>
        </div>
      </button>
    </div>
  </div>
  <div class="block w-full lg:flex lg:flex-wrap lg:justify-between lg:px-0 px-16 ml-0 lg:p-0" id="ideasVotingDone">
    <% @ideas.order('votes DESC').each do |idea| %>
    <div class="flex flex-col xl:mr-4">
      <div class="my-shadow my-8 lg:my-4 bg-white">
        <div class="idea-card lg:h-64 lg:w-64 w-full lg:px-4 px-10 lg:pt-6 lg:pb-1 pt-14 pb-8 flex flex-col items-start italic font-bold bg-post-it-yellowy cursor-default">
          <div class="flex flex-row justify-between w-full">
            <h2 class="mb-4 lg:m-0 text-blurple text-5xl lg:text-xl">#<%= idea.number %></h2>
            <h2 class="mb-4 lg:m-0 text-blurple text-5xl lg:text-xl"><%= pluralize(idea.votes, "vote") %></h2>
          </div>
          <h2 class="mb-4 lg:m-0 text-blurple text-5xl lg:text-xl"></h2>
          <p class="mb-4 lg:m-0 text-4xl lg:text-base leading-loose lg:leading-normal break-words w-full"><%= idea.text %></p>
        </div>
        <% idea.idea_builds.order(:id).each do |idea_build| %>
        <div class="lg:w-64 w-full bg-post-it-yellowy-<%= idea_build.opacity_lookup %> italic font-bold lg:px-4 px-10">
          <div class="flex flex-row justify-between w-full items-center">
            <h2 class="py-4 mb-4 lg:m-0 text-blurple text-5xl lg:text-xl">#<%= idea.number %>.<%= idea_build.decimal %></h2>
            <h2 class="py-4 mb-4 lg:m-0 text-blurple text-5xl lg:text-xl"><%= pluralize(idea_build.votes, "vote") %></h2>
          </div>
          <p class="py-4 text-4xl lg:text-base leading-loose lg:leading-normal break-words w-full"><%= idea_build.idea_build_text %></p>
        </div>
        <% end %>
      </div>

    </div>
    <% end %>
  </div>
</div>
